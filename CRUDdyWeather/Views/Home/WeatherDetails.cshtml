@using CRUDdyWeather.Enums
@model WeatherViewModel

<div class="container">
    <h3>Weather Information for @Model.Name</h3>

    @if (Model.Ftype == ForcastType.Current)
    {
        <div class="current-weather">
            <h4>Current Weather</h4>
            <p>Temperature: @Model.CurrentWeather.Temperature</p>
            <p>Description: @Model.CurrentWeather.WeatherDescription</p>
            <p>Humidity: @Model.CurrentWeather.Humidity</p>
            <p>Wind Speed: @Model.CurrentWeather.WindSpeed</p>
        </div>
    }
    else if (Model.Ftype == ForcastType.Daily)
    {
        <div class="daily-forecast">
            <h4>Daily Forecast</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>High Temp (F)</th>
                        <th>Low Temp (F)</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var forecast in Model.DailyForecasts)
                    {
                        <tr>
                            <td>@forecast.Date</td>
                            <td>@forecast.TemperatureHigh</td>
                            <td>@forecast.TemperatureLow</td>
                            <td>@forecast.WeatherDescription</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else if (Model.Ftype == ForcastType.Hourly)
    {
        <div class="hourly-forecast">
            <h4>Hourly Forecast</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>Time</th>
                        <th>Temperature (F)</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var forecast in Model.HourlyForecasts)
                    {
                        <tr>
                            <td>@forecast.Time</td>
                            <td>@forecast.Temperature</td>
                            <td>@forecast.WeatherDescription</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
